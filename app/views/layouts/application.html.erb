<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Books</a>
    </div>
    <div class="collapse navbar-collapse" id="navbarEexample">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li class="active"><%= link_to 'Home', user_path(current_user.id),class: "glyphicon glyphicon-home home" %></li>
        <li><%= link_to 'user', users_path,class: "glyphicon glyphicon-user" %></li>
        <li><%= link_to 'Books', books_path,class: "glyphicon glyphicon-book books" %></li>
        <li><%= link_to 'loguout', destroy_user_session_path, method: :delete,class: "glyphicon glyphicon-log-out logout" %></li>
      </ul>
      <% else %>
      <li><%= link_to 'Home', root_path,class: "glyphicon glyphicon-home home"  %></li>
      <li><%= link_to 'About', about_path,class: "glyphicon glyphicon-log-out about" %></li>
      <li><%= link_to 'Log in',new_user_session_path,class: "glyphicon glyphicon-log-out sign_in" %></li>
      <li><%= link_to 'sign up',new_user_registration_path,class: "glyphicon glyphicon-edit sign_up" %></li>
      <% end %>
    </div>
  </div>
</nav>
<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>

  </body>

</html>
