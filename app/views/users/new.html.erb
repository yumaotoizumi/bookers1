
<h2>User Imfo</h2>
<p> <%= current_user.name %> </p>
<%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg' %>

 <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>

   <h1>New book</h1>
<%= form_for(book) do |f| %>

    <h4>タイトル</h4>
