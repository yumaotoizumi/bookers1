<h1>User info </h1>

<%= form_for(@user) do |f| %>

    <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
        <% @user.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>

    <p> Name <%= f.text_field :name %> </p>
    <p> Introduction <%= f.text_field :introduction %> </p>
    <p> Imag <%= f.attachment_field :image %> </p>

    <%= f.submit %>
<% end %>
